{
  "asar": true,
  "compression": "maximum",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    "!.angular",
    "!.vscode",
    "!.git",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "images/icon.ico",
    "target": [
      "portable"
    ]
  },
  "mac": {
    "icon": "images/icon.ico",
    "target": [
      "dmg"
    ]
  }
}